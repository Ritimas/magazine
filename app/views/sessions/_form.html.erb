<form action="<%= login_path %>" method="post" id="loginForm">
	<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
	
	<div class="field">
	<label for="email" />
	<input type="text" name="email" />
</div>
<div class="field">
	<label for="password" />
	<input type="password" name="password" />
</div>
<input type="submit"/>
</form>